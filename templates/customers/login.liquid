<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
{{ 'style.css' |   asset_url | stylesheet_tag }}
{%- assign collection_handle = request.path | split: '/' | last -%}
<div class="container h-100">
  <div class="row align-items-center h-100">
    <div class="loginWrapper col-xl-6 col-md-7 col-sm-12 col-xs-12 mx-auto">
      <div class="logo text-center col-12 float-left mb-4"><img src="{{ 'panacche_logo.jpg' | asset_url }}"></div>
      <div class="loginform col-12 float-left px-5 pt-5 pb-4">
        <form>
          <div class="form-group">
          <label for="exampleInputEmail1">Username</label>
          <input type="email" class="form-control userName pl-5" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="">
          <i class="fa fa-user-circle"></i>
          </div>
          <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <span class="float-right"><a href="#">Forgot password?</a></span>
          <input type="password" class="form-control passWord pl-5" id="exampleInputPassword1" placeholder="">
          <i class="fa fa-lock"></i>
          </div>
          <button type="submit" class="btn btn-primary float-right loginBtn">Login</button>
        </form>
      </div>
      <div class="col-12 mt-4 float-left text-center">
          <span class="mr-2">Don't have an account?</span>
          <a href="#">Sign Up</a>
      </div>
      <div class="col-12 mt-4 float-left text-center justify-content-between">
                  <a href="/account/register?view=designer">Designer</a>
        <a href="/account/register" class="px-5">Customer</a>
        <a href="#">Central Admin</a>
      </div>
    </div>
  </div>
</div>
<!-- Optional JavaScript; choose one of the two! -->
<script src="https://kit.fontawesome.com/14f6289dc5.js" crossorigin="anonymous"></script>
