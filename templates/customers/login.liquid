<script>
    $(document).ready(function() {

    
        $("#signup_option").on("change", function() {
            var val = $(this).find(":selected").val();
            console.log("value is: ", val);
            if (val == 'customer_account') {
                window.location.href = '/account/register';
            } else if (val == "designer_account") {
                window.location.href = '/account/register?view=designer';
            }
        })
    })
</script>
