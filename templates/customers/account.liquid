}

#chat_header i.close {
    display: inline-block;
    font-style: normal;
    float: right;
    cursor: pointer;
}
  #chat_history{
    position: relative;
}
  
  #chat{
    position: absolute;
    display: block;
    height: 50px;
    margin: 0 10px;
