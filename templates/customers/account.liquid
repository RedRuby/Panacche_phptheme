<style>
  td {
    display: table-cell;
  }
  p.open_table{
    cursor: pointer;
    text-align: left;
    height: 40px;
    line-height: 40px;
    text-decoration: underline;
    color: #616FC5;
  }
  p.open_table a{
    float: right;
    line-height: initial;
  }
