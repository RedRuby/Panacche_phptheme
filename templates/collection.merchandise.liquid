  window.onload = function() {
    if (typeof jQuery === 'undefined') {
      return;
    }
    
    $('p.title').on('click', function(){
      $(this).next().slideToggle(500);
    })
    
    var customer_msg = 0;
  	var chat_status = 1;
    var user_type = '{{ user_type }}';
    var order_id = {{ order_id }};
    var designer_id = {{ designer_id }};
    var customer_id = {{ customer.id }};
    {% assign customer_name = customer.last_name | slice: 0 | prepend: ' ' | prepend: customer.first_name | replace: '"', '\"' %}
    var product_title = "{{ collection_title | replace: '"', '\"' | append: '|' | append : customer_name }}";
    $.ajax({
      url: 'https://api.panacche.com/chat',
      method: 'POST',
      async: true,
      data: {id: order_id },
      jsonpCallback: 'dp',
      dataType : 'jsonp',
      contentType: 'application/json; charset=utf-8',
      success: function(response){
        var cls = '';
        
        customer_msg = 0;
        $(response).each(function(t){
          cls = '';
          if ( response[t].user == 'a' && user_type != 'a' ){
            cls = ' class="bold"';
          }else if ( response[t].user == 'c' && user_type == 'a' ){
            cls = ' class="bold"';
          }else if ( user_type == response[t].user ){
            cls = ' class="mine"';
          }
          $('ol.messages').append('<li'+cls+'>'+response[t].message+'</li>');
          if ( response[t].user == 'c' ){ customer_msg++ };
          chat_status = response[t].status;
        });
        if ( customer_msg >= 25 ){
          $('#chat').fadeOut(2500).remove();
        }
        if (chat_status == 0){
          $('#chat button, #message').prop('disabled',true).attr('placeholder','You have reached the messages limit for this conversation.');
        }
      },
      error: function(XMLHttpRequest) {
        console.log(XMLHttpRequest);
      }
    });
    
    
    $('#chat button').on('click', function(e){
      e.preventDefault();
      if (customer_msg >= 25 || chat_status == 0 ){return false};
      var message = $('#chat input').val();
      if ( message.length > 0 ){
        $('#chat button').prop('disabled', true);
        $.ajax({
          url: 'https://api.panacche.com/chat/send_customer',
          method: 'POST',
          async: true,
          data: {order_id: order_id, designer_id: designer_id, customer_id: customer_id, product_title: product_title, user_type: user_type, message: message },
          success: function(response){
            $('ol.messages').append('<li class="mine">'+message+'</li>');
            $('#chat input').val('');
            $('#chat button').prop('disabled', false);
            customer_msg++;
            if ( customer_msg >= 25 || chat_status == 0 ){ $('#chat button, #message').prop('disabled',true).attr('placeholder','You have reached the messages limit for this conversation.');  }
          },
          error: function(XMLHttpRequest) {
            console.log(XMLHttpRequest);
            return false;
          }
        });
      }
    })

    
    
    
  }
  
